---
type instructorQuote = {
  profilePicture: string;
  name: string;
  position: string;
  quote: string;
};

interface Props {
  instructorQuote: instructorQuote;
}

const { instructorQuote } = Astro.props;
---

<style>
  .instructor-card {
    box-shadow: 0px 0px 16px #efefef;
  }

  .instructor-card__quote {
    text-wrap: balance;
  }
</style>

<article
  class="instructor-card flex h-full w-full max-w-sm flex-col items-center gap-8 rounded-lg p-8 text-center"
>
  <header class="flex flex-col items-center gap-4">
    <img
      src={instructorQuote.profilePicture}
      alt={`${instructorQuote.name}'s profile picture`}
      class="rounded-full"
      width="100"
      height="100"
      loading="lazy"
      decoding="async"
    />
    <div class="font-medium">
      <h3>{instructorQuote.name}</h3>
      <p class="text-primary">{instructorQuote.position}</p>
    </div>
  </header>
  <p class="instructor-card__quote text-black/60">"{instructorQuote.quote}"</p>
</article>
